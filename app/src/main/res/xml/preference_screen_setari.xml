<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Vizualizare date">

        <ListPreference
            android:icon="@drawable/ic_location"
            android:defaultValue="Bucuresti"
            app:key="locatieCurenta"
            app:title="Alegeti locatia temporara curenta" />

        <ListPreference
            android:icon="@drawable/blood_red"
            app:key="grupaSanguina"
            app:title="Alegeti o alta grupa sanguina" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Notificari">

        <SwitchPreference
            android:icon="@drawable/bell_outline"
            android:defaultValue="false"
            android:title="Notificari pentru alertele de sange"
            app:key="notificari"/>

    </PreferenceCategory>
</PreferenceScreen>