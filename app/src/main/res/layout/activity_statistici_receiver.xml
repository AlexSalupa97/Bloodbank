<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitati.StatisticiReceiverActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/gradient_red_vertical" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tlStatisticiReceiver"
        style="@style/CategoryTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/celalaltRosu"
        app:tabBackground="@color/celalaltRosu" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpStatisticiReceiver"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4" />

</LinearLayout>