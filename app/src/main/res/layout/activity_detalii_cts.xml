<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefreshRVSituatieSanguinaCTS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="ro.alexsalupa97.bloodbank.Activitati.DetaliiCTSActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_red_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNumeCTS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-40dp"
                        android:gravity="center|center_vertical"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:outlineSpotShadowColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="32dp"
                                android:layout_marginBottom="20dp"
                                android:visibility="invisible"
                                android:text="  Detalii"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic|bold" />

                            <TextView
                                android:id="@+id/tvAdresa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="7"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@android:color/black" />


                                <ImageButton
                                    android:id="@+id/btnEmail"
                                    android:layout_width="0dp"
                                    android:background="@drawable/rounded_button"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|end"
                                    android:layout_weight="3"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/email_red" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvTelefon"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="7"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@android:color/black" />


                                <ImageButton
                                    android:id="@+id/btnTelefon"
                                    android:layout_width="0dp"
                                    android:background="@drawable/rounded_button"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_gravity="center|end"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/phone_red" />


                            </LinearLayout>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:outlineSpotShadowColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvSituatieSanguinaCTS"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnProgramare"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:background="@android:color/white"
                        android:drawableStart="@drawable/calendar_clock"
                        android:paddingLeft="80dp"
                        android:paddingRight="80dp"
                        android:text="Programare"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:padding="4dp"
                android:backgroundTint="#dcdcdc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-160dp"
                android:background="@drawable/circle"
                android:src="@mipmap/ic_bloodbank_launcher_round" />

        </FrameLayout>


    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>









