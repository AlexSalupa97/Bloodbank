<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ro.alexsalupa97.bloodbank.Activitati.PrimaPaginaActivity">

        <Button
            android:id="@+id/btnVreauSaDonez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:text="Vreau sa donez"/>


        <Button
            android:id="@+id/btnListaCTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:text="Vezi lista centrelor de transfuzie"/>


        <Button
            android:id="@+id/btnAlerte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:text="Alerte"/>

        <Button
            android:id="@+id/btnNotificari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:text="Notificari"/>

        <Button
            android:id="@+id/btnReceiveri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:text="Vezi lista receiverilor"/>


        <Button
            android:id="@+id/btnTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:text="Test"/>




    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_gravity="start"
        app:itemTextColor="@color/colorPrimaryDark"
        app:itemIconTint="@color/colorPrimaryDark"
        app:menu="@menu/navigation_drawer_prima_pagina"
        app:headerLayout="@layout/navigation_drawer_layout"
        >
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>