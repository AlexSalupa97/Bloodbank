<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitati.ActualizareStareAnalizeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPDF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableStart="@drawable/file_upload"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="Incarca PDF"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnActualizare"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableStart="@drawable/account_edit_black"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="Actualizeaza"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone" />

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfStareAnalize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <!--<Button-->
            <!--android:id="@+id/btnQR"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@android:color/white"-->
            <!--android:drawableStart="@drawable/qrcode_scan"-->
            <!--android:paddingLeft="80dp"-->
            <!--android:paddingRight="80dp"-->
            <!--android:text="QR code"-->
            <!--android:textColor="@color/colorPrimaryDark" />-->


    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-4dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:backgroundTint="@color/celalaltRosu"
        android:src="@drawable/qrcode_scan" />

</RelativeLayout>