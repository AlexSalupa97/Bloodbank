<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitati.ActualizareStareAnalizeActivity">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfStareAnalize"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <Button
        android:text="Incarca PDF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:drawableStart="@drawable/file_upload"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:id="@+id/btnPDF"/>

    <Button
        android:id="@+id/btnActualizare"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:drawableStart="@drawable/account_edit_black"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="Actualizeaza"
        android:textColor="@color/colorPrimaryDark" />

</LinearLayout>