<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Activitati.FinalizareSuccesIntrebariActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:text="Indrumare catre un centru pentru realizarea programarii donatiei"/>

    <Button
        android:id="@+id/btnCentreRecoltare"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Vezi centrele in vederea realizarii donatiei"/>
</LinearLayout>