<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activitati.DetaliiReceiverMainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_red_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNumeReceiver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-60dp"
                        android:gravity="center|center_vertical"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="#ececec"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@android:color/black"
                            android:text="  Detalii"
                            android:textSize="20sp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/tvAdresa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="8dp"
                            android:text="  Centru de transfuzie: " />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="7"
                                android:gravity="center|start"
                                android:text="  Mail: " />


                            <Button
                                android:id="@+id/btnEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="email" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvTelefon"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="7"
                                android:gravity="center|start"
                                android:text="  Telefon: " />


                            <Button
                                android:id="@+id/btnTelefon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Apeleaza" />


                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/swiperefreshRVSituatieSanguinaReceiver"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvIstoricReceiver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ececec" />
                    </android.support.v4.widget.SwipeRefreshLayout>


                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-140dp"
                android:background="@drawable/circle"
                android:src="@mipmap/ic_bloodbank_launcher_round" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/twitterShareBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#1da1f2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/twitter" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="20"
                android:gravity="center"
                android:text="Share on Twitter"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.facebook.share.widget.ShareButton
            android:id="@+id/fbShareBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="      Share on Facebook" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/navigation_drawer_layout"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/meniu_receiver"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>