<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shadow"
    tools:context="ro.alexsalupa97.bloodbank.Activitati.AnalizeNotOkActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/close_circle_outline"
        android:layout_gravity="bottom"/>
    <TextView
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.8"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:text="Starea actuala a analizelor dvs. nu va permite sa efectuati o donatie.\n\nIn cazul in care dipuneti de fisierul PDF corespunzator analizelor, il puteti incarca in sectiunea corespunzatoare din pagina principala.\n\nTotusi, puteti contribui activ la raspandirea aplicatiei prin distribuirea acesteia pe Facebook sau Twitter."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1da1f2"
        android:orientation="horizontal"
        android:id="@+id/twitterShareBtn">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/twitter"
            android:layout_marginLeft="4dp"
            android:gravity="center_horizontal|center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_gravity="start"
            android:text="Share on Twitter"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <com.facebook.share.widget.ShareButton
        android:id="@+id/fbShareBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="      Share on Facebook"/>

</LinearLayout>