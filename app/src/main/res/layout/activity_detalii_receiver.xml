<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefreshRVSituatieSanguinaReceiver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitati.DetaliiReceiverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_red_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNumeReceiver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-40dp"
                        android:gravity="center|center_vertical"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:outlineSpotShadowColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="32dp"
                                android:layout_marginBottom="20dp"
                                android:text="  Detalii"
                                android:visibility="invisible"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic|bold" />

                            <TextView
                                android:id="@+id/tvAdresa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="7"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@android:color/black" />


                                <ImageButton
                                    android:id="@+id/btnEmail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|end"
                                    android:layout_weight="3"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/rounded_button"
                                    android:src="@drawable/email_red" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvTelefon"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="7"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@android:color/black" />


                                <ImageButton
                                    android:id="@+id/btnTelefon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|end"
                                    android:layout_weight="3"
                                    android:background="@drawable/rounded_button"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/phone_red" />


                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:outlineSpotShadowColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvIstoricReceiver"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-132dp"
                android:background="@drawable/circle"
                android:backgroundTint="#dcdcdc"
                android:padding="4dp"
                android:src="@mipmap/ic_bloodbank_launcher_round" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/twitterShareBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#1da1f2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/twitter" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="20"
                android:gravity="center"
                android:text="Share on Twitter"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.facebook.share.widget.ShareButton
            android:id="@+id/fbShareBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="      Share on Facebook" />

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>