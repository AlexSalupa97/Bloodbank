<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="ro.alexsalupa97.bloodbank.Activitati.IntrebariActivity">

    <ro.alexsalupa97.bloodbank.ViewCustom.ViewPagerNoSwipe
        android:id="@+id/viewPagerIntrebari"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </ro.alexsalupa97.bloodbank.ViewCustom.ViewPagerNoSwipe>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1.2"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnIntrebareNU"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:drawableTop="@drawable/nu"
            android:text="nu"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnIntrebareDA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:drawableTop="@drawable/da"
            android:text="da"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>